<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyChatApp.MainPage"
             BackgroundColor="#121212">
    
    <Grid
        Padding="20"
        RowDefinitions="Auto,*,Auto,Auto"
        ColumnDefinitions="*">

        <!-- Header -->
        <Label 
            Text="Chat App"
            FontSize="28"
            FontAttributes="Bold"
            TextColor="White"
            HorizontalOptions="Center"
            Margin="0,10,0,20" />

        <!-- Name input -->
        <Grid Grid.Row="3" ColumnDefinitions="Auto,*,Auto" Margin="0,20,0,0">
            <Label
        Text="Name:"
        FontSize="18"
        TextColor="White"
        VerticalOptions="Center" />
            <Entry
        x:Name="nameEntry"
        Placeholder="Your name"
        FontSize="18"
        BackgroundColor="#1E1E1E"
        TextColor="White"
        PlaceholderColor="#999"
        Grid.Column="1"
        VerticalOptions="Center" />
            <Button
        x:Name="setNameButton"
        Text="Set"
        Clicked="ChangeName"
        BackgroundColor="#2196F3"
        TextColor="White"
        WidthRequest="80"
        Grid.Column="2"
        VerticalOptions="Center" />
        </Grid>

        <!-- Chat messages -->
        <ScrollView 
            Grid.Row="1"
            BackgroundColor="#2D2D2D"
            HeightRequest="400"
            VerticalOptions="FillAndExpand"
            Margin="0,0,0,10"
            >
            <VerticalStackLayout 
                x:Name="chatMessages"
                Padding="10"
                Spacing="5" />
        </ScrollView>

        <!-- Message input + send -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Entry
                x:Name="mychatMessage"
                Placeholder="Type your message..."
                FontSize="18"
                BackgroundColor="#1E1E1E"
                TextColor="White"
                PlaceholderColor="#999"
                VerticalOptions="Center" />
            <Button
                x:Name="sendButton"
                Text="Send"
                Clicked="OnSend"
                WidthRequest="80"
                BackgroundColor="#4CAF50"
                TextColor="White"
                Grid.Column="1"
                VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>
