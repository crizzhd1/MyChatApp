<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyChatApp.Tools"
             BackgroundColor="#121212"
             Title="Tools">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="30"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <!-- Header -->
            <Label 
                Text="Device Tools"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center" />

            <!-- Flashlight section -->
            <Border
                BackgroundColor="#1E1E1E"
                Shadow="5"
                Stroke="#4CAF50"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 16"
                Padding="20"
                WidthRequest="300">

                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label 
                        Text="Flashlight"
                        FontSize="20"
                        TextColor="#4CAF50"
                        HorizontalOptions="Center" />

                    <Button      
                        Text="Turn On / Off"
                        Clicked="ToggelLight"
                        IsVisible="{OnPlatform Android=true, iOS=false, WinUI=false}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="12"
                        WidthRequest="200" />
                </VerticalStackLayout>
            </Border>

            <!-- Recording section -->
            <Border
                BackgroundColor="#1E1E1E"
                Padding="20"
                Shadow="5"
                Stroke="#2196F3"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 16"
                WidthRequest="300">

                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label 
                        Text="Audio Recorder"
                        FontSize="20"
                        TextColor="#2196F3"
                        HorizontalOptions="Center" />

                    <Label 
                        x:Name="RecStat"
                        Text="Status: Idle"
                        FontSize="16"
                        TextColor="White"
                        HorizontalOptions="Center" />

                    <Button     
                        Text="Start / Stop Recording"
                        Clicked="RecordAudio"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="12"
                        WidthRequest="200" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
