<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyChatApp.MainPage">
    
    <!-- Margin defined by four distinct values that are applied to the left, top, right, and bottom. -->

    <VerticalStackLayout
            Spacing="10"
            Padding="10,0">

        <Label Text="Chat App" FontSize="20" HorizontalOptions="Start" Margin="0,0,0,55"/>

        <ScrollView BackgroundColor="DimGray" WidthRequest="300" HeightRequest="400">
            <VerticalStackLayout x:Name="chatMessages" HorizontalOptions="Center"/>
        </ScrollView>

        <Entry
            x:Name="mychatMessage"
            Placeholder="Type Your Message"
            FontSize="18"
            WidthRequest="200"
            HorizontalOptions="Center"/>

        <Button
            x:Name="sendButton"
            Text="Send" 
            Clicked="OnSend"
            WidthRequest="200"
            HorizontalOptions="Center"/>

        <Label
            x:Name="NameLable"
            Text="Name:"
            FontSize="20"
            Margin="0,-570,220,0"
            HorizontalOptions="End"/>

        <Label
            x:Name="NameDisplay"
            Text=""
            FontSize="20"
            Margin="0,-85,0,0"
            HorizontalOptions="Center"/>

        <Entry
            x:Name="nameEntry"
            FontSize="18"
            WidthRequest="100"
            Margin="0,-3,110,0"
            HorizontalOptions="End"/>

        <Button
            WidthRequest="100"
            Text="Set Name"
            Clicked="ChangeName"
            Margin="210,-50,0,0"
            HorizontalOptions="End"/>

    </VerticalStackLayout>
</ContentPage>
